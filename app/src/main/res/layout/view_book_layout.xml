<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schismatrix"
            android:textSize="24sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:onClick="edit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:onClick="delete"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="back"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bruce Sterling"
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/publication_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Date: 1978"
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages: 278"
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/times_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have read this book several times."
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/date_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I finished reading this book on 02/14/2013."
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/glad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm glad I read it."
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/read_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'll read it again."
                android:textSize="18sp"
                android:padding="8sp"/>
            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments: Here are my comments about the book."
                android:textSize="18sp"
                android:padding="8sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>